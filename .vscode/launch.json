  "version": "0.2.0",
  "configurations": [
    {
      "name": "调试nest程序不用输入debug命令",
      "request": "launch",
      "runtimeArgs": [
        "run",
        "start:dev"
      ],
      "runtimeExecutable": "npm",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "cwd": "${workspaceFolder}/nest/debug-test/nest-debug",
      "type": "node",
      "console": "integratedTerminal"
    },
    {
      "name": "调试index.js文件来测试一下",
      "program": "${workspaceFolder}/nest/debug-test/index.js",
      "request": "launch",
      "stopOnEntry": true,
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    },
    {
      "name": "调试nest程序",
      "port": 9229,
      "request": "attach",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "type": "node"
    }
  ]
}